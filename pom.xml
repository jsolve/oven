<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>pl.jsolve</groupId>
	<artifactId>oven</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<name>oven</name>
	<description>Pretty neat and fast mapper.</description>
	<url>https://github.com/jsolve/oven</url>

	<organization>
		<name>jsolve</name>
		<url>http://jsolve.pl</url>
	</organization>

	<issueManagement>
		<url>https://github.com/jsolve/oven/issues</url>
		<system>GitHub Issues</system>
	</issueManagement>

	<ciManagement>
		<system>Travis CI</system>
		<url>https://travis-ci.org/jsolve/oven</url>
	</ciManagement>

	<scm>
		<url>git@github.com:jsolve/oven.git</url>
		<connection>scm:git:git@github.com:jsolve/oven.git</connection>
		<developerConnection>scm:git:git@github.com:jsolve/oven.git</developerConnection>
	</scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.6</java.version>
		<maven-compiler-plugin.version>3.0</maven-compiler-plugin.version>
		<maven-jar-plugin.version>2.4</maven-jar-plugin.version>
		<wagon-ftp.version>2.4</wagon-ftp.version>
		<typeconverter.version>1.0.0-SNAPSHOT</typeconverter.version>
		<sweetener.version>1.0.0-SNAPSHOT</sweetener.version>

		<jackson-mapper-asl.version>1.9.12</jackson-mapper-asl.version>
		<fest-assert.version>1.4</fest-assert.version>
		<mockito-core.version>1.9.5</mockito-core.version>
		<junit.version>4.10</junit.version>
	</properties>

	<repositories>
		<repository>
			<id>jsolve-maven</id>
			<name>Jsolve Maven Repository</name>
			<url>http://repo.kurylek.pl/</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>pl.jsolve</groupId>
			<artifactId>typeconverter</artifactId>
			<version>${typeconverter.version}</version>
		</dependency>
		<dependency>
			<groupId>pl.jsolve</groupId>
			<artifactId>sweetener</artifactId>
			<version>${sweetener.version}</version>
		</dependency>

		<!-- For testing -->
		<dependency>
			<groupId>org.easytesting</groupId>
			<artifactId>fest-assert</artifactId>
			<version>${fest-assert.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<version>${mockito-core.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
		</plugins>

		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>${wagon-ftp.version}</version>
			</extension>
		</extensions>
	</build>

	<distributionManagement>
		<repository>
			<id>jsolve-maven</id>
			<url>ftp://ftp.kurylek.pl/www/maven2</url>
		</repository>
	</distributionManagement>
</project>
